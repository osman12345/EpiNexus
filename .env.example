# EpiNexus Environment Configuration
# Copy to .env and update values for your deployment

# Database (use PostgreSQL for Docker; SQLite for local dev)
DATABASE_URL=sqlite:///./epinexus.db
# DATABASE_URL=postgresql://epinexus:your_password@localhost:5432/epinexus

# Redis (for background job queue)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=changeme_in_production

# PostgreSQL (Docker deployment)
POSTGRES_PASSWORD=changeme_in_production

# CORS (comma-separated allowed origins)
CORS_ORIGINS=http://localhost:8501

# Application
DEBUG=false
DEFAULT_GENOME=hg38
DEFAULT_FDR_THRESHOLD=0.1

# External tool paths (if not on PATH)
# BOWTIE2_PATH=bowtie2
# SAMTOOLS_PATH=samtools
# BEDTOOLS_PATH=bedtools
# MACS2_PATH=macs2
# R_PATH=Rscript
